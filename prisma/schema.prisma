generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id String @id @default(cuid())
  username String
  email String
  password String
  name String?
  bio String?
  avatar String?
  isDeactivated Boolean @default(false)
  products Product[]
  orders Order[]
  comments Comment[]
}

model Category {
  id String @id @default(cuid())
  name String
  products Product[]
}

model Product {
  id String @id @default(cuid())
  name String
  slug String
  shortDescription String
  overview String
  featuredImage String
  productImages String
  categoryId String @default("clkjrq5zy0002rc4av09udnyx")
  category Category @relation(references: [id], fields: [categoryId])
  downloadableFile String
  authorId String
  author User @relation(references: [id], fields: [authorId])
  isDeleted Boolean @default(false)
  orders Order[]
  comments Comment[]

  @@index([authorId])
  @@index([categoryId])
}

model Order {
  id String @id @default(cuid())
  productId String
  product Product @relation(references: [id], fields: [productId])
  userId String
  user User @relation(references: [id], fields: [userId])

  @@index([productId])
  @@index([userId])
}

model Comment {
  id String @id @default(cuid())
  body String
  userId String
  user User @relation(references: [id], fields: [userId])
  productId String
  product Product @relation(references: [id], fields: [productId])

   @@index([productId])
  @@index([userId])
}